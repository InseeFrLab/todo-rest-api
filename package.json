    "keywords": [
        "todo",
        "todos",
        "rest",
        "api"
    ],
    "dependencies": {
        "@hono/node-server": "^1.11.1",
        "@hono/node-ws": "^1.0.3",
        "@hono/zod-openapi": "^0.13.0",
        "hono": "^4.11.1",
        "oidc-spa": "^9.1.0",
        "tsafe": "^1.8.12",
        "url-join": "^5.0.0",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@types/node": "^20.12.12",
        "@vercel/ncc": "^0.38.1",
        "dotenv-cli": "^7.4.1",
        "tsx": "^4.3.0",
        "typescript": "^5.4.5"
    }
